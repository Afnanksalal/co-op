# ===========================================
# Co-Op Frontend Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# App Configuration
# ===========================================
# App URL (for OAuth callbacks, metadata, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Supabase Configuration
# Get from: https://supabase.com/dashboard/project/[PROJECT]/settings/api
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...

# ===========================================
# API Configuration
# Backend URL - adjust for your environment
# ===========================================
# Development
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# Production (uncomment and update)
# NEXT_PUBLIC_API_URL=https://your-backend.onrender.com/api/v1
